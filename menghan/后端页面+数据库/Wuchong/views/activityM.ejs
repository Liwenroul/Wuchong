<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>娱乐管理</title>
    <link rel="stylesheet" href="../stylesheets/css.css">
</head>
<body>
    <div id="login_form">
        <div class="title">
            <img src='../images/qi-4.png'/>	
            吾宠后台管理系统			
        </div>
        <div class="left">
            <div class="a">
                    <h1 onclick="showSystem()">系统管理</h1>
                </div>
                <div class="a">
                    <h1  onclick="showDongTai()">动态管理</h1>
                </div>
                <div class="a" style="background: #1daea9;">
                    <h1 onclick="showAct()">娱乐管理</h1>
            </div>
            <div class="a">
                <h1 onclick="showUser()">用户管理</h1>
            </div>
        </div>
        <div class="main">
            <div class="top">
                <h1>活动管理</h1>
                <button>查找和替换</button>
            </div>
            <div class="bottonA">
                <table>
                    <tr>
                        <th style="width:2px;"> </th>
                        <th>活动ID</th>
                        <th>活动名</th>
                        <th>活动内容</th>
                        <th>图片</th>
                        <th>活动城市</th>
                        <th>报名者信息</th>
                        <th>活动地址</th>
                        <th>联系方式</th>
                        <th>操作</th>
                    </tr>
                    <%for(var i=0;i < active.length;i++){%>
                        <tr>
                            <td style="width:6px"><input type="checkbox"></td>
                            <td>
                                <%= active[i]["activeId"]%>
                            </td>
                            <td>
                                <%= active[i]["activeName"]%>
                            </td>
                            <td>
                                    <%= active[i]["acContent"]%>
                            </td>
                            <td><img src="../images/tou.png" alt="">
                                <!-- <%= active[i]["acImg"]%> -->
                            </td>
                            <td>
                                <%= active[i]["acAddress"]%>
                            </td>
                            <td><button style="width: 60px;" onclick="showBaoming()">报名表</button></td>
                            <td>
                                <%= active[i]["acCity"]%>
                            </td>
                            <td>
                                <%= active[i]["acContact"]%>
                            </td>
                            <!-- <td>
                            <%= active[i]["userId"]%>
                            </td> -->
                            <td>
                                    <button>编辑</button>
                                    <button>删除</button>
                            </td>
                        </tr>
                    <%}%>
                    
                </table>
                <div class="bottomA">
                    <input type="checkbox" class="quanxuan"> 全选
                    <button>批量删除</button>
                    <button>批量操作</button>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    function showSystem() {
        window.location = "http://localhost:3000/system";
    }
    function showDongTai() {
        window.location = "http://localhost:3000/dongtai";
    }
    function showAct() {
        window.location = "http://localhost:3000/activity";
    }
    function showUser() {
        window.location = "http://localhost:3000/userguanli";
    }
    function showBaoming() {
        window.location = "http://localhost:3000/listb";
    }
</script>
</html>
