<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>动态管理</title>
    <link rel="stylesheet" href="../stylesheets/css.css">
</head>
<body>
    <div id="login_form">
        <div class="title">
            <img src='../images/qi-4.png'/>	
            吾宠后台管理系统			
        </div>
        <div class="left">
            <div class="a">
                    <h1 onclick="showSystem()">系统管理</h1>
                </div>
                <div class="a" style="background: #1daea9;">
                    <h1  onclick="showDongTai()">动态管理</h1>
                </div>
                <div class="a">
                    <h1 onclick="showAct()">娱乐管理</h1>
            </div>
            <div class="a">
                <h1 onclick="showUser()">用户管理</h1>
            </div>
        </div>
        <div class="main">
            <div class="top">
                <h1>动态管理</h1>
                <form class="myform" action="/dongtai" method="POST">
                    <input 
                    style='margin-left: 100px;margin-top: 30px;width:400px;height:25px' type='text' value='' placeholder="搜索"
                    class="search_Dongtai" id="search_Dongtai" autocomplete="off" name="search_Dongtai"
                    >
                    <button type='submit' class="search_Bt" id="search_Bt" > 查找</button>
                    <!-- <button>替换</button> -->
                </form>
                
            </div>
            <div class="botton">
                <table>
                    <tr>
                        <th style="width:6px;"> </th>
                        <th>动态ID</th>
                        <th>标题</th>
                        <th>图片</th>
                        <th>点赞次数</th>
                        <th>用户ID</th>
                        <th>操作</th>
                    </tr>
                    <%for(var i=0;i < dynamic.length;i++){%>
                        <tr>
                            <td style="width:6px"><input type="checkbox"></td>
                            <td>
                                <%= dynamic[i]["dynamicId"]%>
                            </td>
                            <td>
                                <%= dynamic[i]["dynamicContent"]%>
                            </td>
                            <td>
                                <img style="width: 80px;" src=<%=dynamic[i]["dynamicImg"]%> alt=""/>
                            </td>
                            <td>
                                <%= dynamic[i]["likeNum"]%>
                            </td>
                            <td>
                            <%= dynamic[i]["userid"]%>
                            </td>
                            <td>
                                    <button><a href="/editD?dynamicId=<%= dynamic[i]["dynamicId"]%>">编辑</a></button>
                                    <button><a href="/deld?dynamicId=<%= dynamic[i]["dynamicId"]%>">删除</a></button>
                            </td>
                        </tr>
                    <%}%>
                    
                </table>
                
            </div>
        </div>
    </div>
</body>
<script>
function showSystem() {
        window.location = "http://localhost:3000/system";
    }
    function showDongTai() {
        window.location = "http://localhost:3000/dongtai";
    }
    function showAct() {
        window.location = "http://localhost:3000/activity";
    }
    function showUser() {
        window.location = "http://localhost:3000/userguanli";
    }
</script>
</html>
