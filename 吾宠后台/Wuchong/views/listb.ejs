<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
        }
        #foot {
            border-collapse: collapse;
            width: 1200px;
            margin: 0 auto;
            text-align: center;
            margin-top: 30%;
        }
        table {
            border-collapse: collapse;
            width: 1000px;
            margin: 0 auto;
            text-align: center;
            display: block;
            margin-top: 100px;
        }
        table td, table th {
            color: #666;
            height: 45px;
        }
        table thead th {
            background-color: #fff;
            width: 220px;
        }
        #action{
            background-color: #CCE8EB;
            border: 1px solid #eee;
            width: 260px;    
        }
        table tr {
            background: #fff;
        }

        .container {
            margin-top: 80px;
        }
        button{
            background-color: #1daea9;
        }
    </style> 
</head>
<body>
    
    <div class="container">
            
        <table  class="table">
            <thead>
                <tr>
                    <!-- <th>活动ID</th> -->
                    <th>用户ID</th>
                    <th>报名者ID</th>
                    <th>报名昵称</th>
                    <th>报名电话</th>
                    <th>宠物名</th>
                    <th>宠物年龄</th>
                    <th>宠物种类</th>
                    <th></th>
                    <th id="action">编辑</th>
                    <th></th>
                    <th id="action">删除</th>
                </tr>
            </thead>

            <tbody id="result"></tbody>
            <%for(var i=0;i < signup.length;i++){%>
                <tr>
                    <!-- <td>
                            <%= signup[i]["activeId"]%>
                    </td> -->
                    <td>
                                <%= signup[i]["userId"]%>
                    </td>
                    <td>
                        <%= signup[i]["signId"]%>
                    </td>
                    <td>
                        <%= signup[i]["signName"]%>
                    </td>
                    <td>
                            <%= signup[i]["signTel"]%>
                    </td>
                    <td>
                            <%= signup[i]["spetName"]%>
                    </td>
                    <td>
                            <%= signup[i]["spetAge"]%>
                    </td>
                    <td>
                        <%= signup[i]["spetKind"]%>
                    </td><td></td>
                    <td>
                    <button><a href="/editB?signId=<%=signup[i]["signId"]%>">
                        编辑
                    </button></td><td></td>
                    <td>
                            <button><a href="/delbm?signId=<%=signup[i]["signId"]%>&&activeId=<%=signup[i]["activeId"]%>">
                                删除</a>
                            </button>
                    </td>
                </tr>
            <%}%>
            

        </table>
        <div id="foot">
            <p style="float: left;" onclick="showAct()">返回上一页</p>
            <p style="float: right;">确认</p>
        </div>
        
    </div>
    
        
</body>
<script>
   function showAct() {
        window.location = "http://localhost:3000/activity";
    }
</script>
</html>
